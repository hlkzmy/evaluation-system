<div class="row-fluid"><!-- BEGIN PAGE HEADER-->
	<div class="span12">
		<h3 class='page-title'>
			<small>您填写或者选择关于民主评价的一些基本信息，然后就可以创建一个民主评价</small>
		</h3>
		<ul class="breadcrumb"><!-- BEGIN PAGE TITLE & BREADCRUMB-->
               <li>
                  <a href="#">民主评价系统</a>
               </li>
               <li>
                   <a href="#">评价管理</a>
               </li>
               <li>
                   <a href="#">创建评价</a>
               </li>
        </ul><!-- END PAGE TITLE & BREADCRUMB-->
    </div><!-- END span12-->
</div><!-- END PAGE HEADER-->

<!-- BEGIN PAGE CONTENT-->
<div class="row">
	<div class="col-md-12">
		<!-- BEGIN SAMPLE FORM PORTLET-->
		<div class="portlet box blue">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-gift"></i> 创建评价
				</div>
			</div>
			<div class="portlet-body form">
				{{ form_start(formView)}}
					<div class="form-body">
						<div class="form-group">
							<label for="exampleInputEmail1">评价名称</label>
							<div class="input-group col-md-4">
								<span class="input-group-addon">
								<i class="fa fa-envelope"></i>
								</span>
								<input type="text" name='name' class="form-control" placeholder="请填写评价的名称，长度不要超过20个字">
							</div>
						</div>
						<div class="form-group">
							<label>评价单位</label>
							<div class="input-group col-md-4">
								<span class="input-group-addon">
									<i class="fa fa-envelope"></i>
								</span>
								{{ form_widget(formView.school_id)}}
							</div>
						</div>
						<div class="form-group">
							<label>评价对象</label>
							<div class="input-group col-md-4">
								<span class="input-group-addon">
									<i class="fa fa-envelope"></i>
								</span>
								{{ form_widget(formView.evaluated_person)}}
							</div>
						</div>
						<div class="form-group">
							<label>开始时间</label>
							<div class="input-group col-md-4">
								<span class="input-group-addon">
									<i class="fa fa-envelope"></i>
								</span>
								{{ form_widget(formView.start_time)}}
							</div>
						</div>
						<div class="form-group">
							<label>持续时长</label>
							<div class="input-group col-md-4">
								<span class="input-group-addon">
									<i class="fa fa-envelope"></i>
								</span>
								{{ form_widget(formView.duration)}}
							</div>
						</div>
						<div class="form-group">
							<label>评价的相关描述</label>
							<div class="input-group col-md-6">
								{{ form_widget(formView.description)}}
							</div>
						</div>
					</div>
					<div class="form-actions text-center">
							{{ form_widget(formView._token)}}
							<button type="button" class="btn blue">提交</button>
							<button type="reset"  class="btn default">重置</button>
					</div>
				</form>
			</div>
		</div><!-- END SAMPLE FORM PORTLET-->
	</div><!-- col-md-12 end -->
</div><!-- row end -->
<!-- END PAGE CONTENT-->